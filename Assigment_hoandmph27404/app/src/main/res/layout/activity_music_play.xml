<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#643F91"
    tools:context=".MusicPlayActivity">


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_baseline_arrow_back_24"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_songtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Tên bài hát"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Ca sĩ"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:civ_border_color="#000000"
        app:civ_border_width="2dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="40dp"
        android:id="@+id/imgviewcircle"
        android:src="@drawable/img_circle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_timestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_timeend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="305dp"
            android:text="00:00"
            android:textColor="#fff"
            android:textSize="16sp"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/id_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_random"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="55dp"
            android:background="@null"
            android:src="@drawable/rand" />

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:src="@drawable/ic_prev" />

        <ImageButton
            android:id="@+id/play_pause"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:src="@drawable/ic_pause" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:src="@drawable/ic_next" />


        <ImageButton
            android:id="@+id/btn_replay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:src="@drawable/ic_replay" />
    </LinearLayout>

</LinearLayout>