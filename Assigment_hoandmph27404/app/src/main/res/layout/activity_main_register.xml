<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/wallpapermain"
    tools:context=".MainActivityRegister">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/avatar"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_retendangnhap"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/border_text"
            android:hint="Tên đăng nhập"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_hovaten"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/border_text"
            android:hint="Họ và tên"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginBottom="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_pass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/border_text"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="Mật khẩu"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginBottom="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_repassregister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/border_text"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="Nhập lại mật khẩu"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dangky"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius"
            android:text="Đăng ký"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/btn_huydangky"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius"
            android:text="Hủy"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>