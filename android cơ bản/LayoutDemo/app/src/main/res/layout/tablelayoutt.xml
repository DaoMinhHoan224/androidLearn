<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".TablelayouttActivity">

    <TableRow>
        <TextView
            android:id="@+id/tv1"
            android:text="1"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv2"
            android:text="2"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv3"
            android:text="3"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tvchia"
            android:text=":"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/tv4"
            android:text="4"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv5"
            android:text="5"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv6"
            android:text="6"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tvX"
            android:text="X"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>


    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tv7"
            android:text="7"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv8"
            android:text="8"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv9"
            android:text="9"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tvtru"
            android:text="-"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>


    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv0"
            android:text="0"
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:layout_span="2"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tvcham"
            android:text="."
            android:textSize="20sp"
            android:background="#9E9E9E"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvcong"
            android:layout_margin="5dp"
            android:background="#9E9E9E"
            android:gravity="center_horizontal"
            android:text="+"
            android:textSize="20sp" />


    </TableRow>
    <TableRow>

        <TextView
            android:textSize="20sp"
            android:layout_span="3"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvbang"
            android:layout_margin="5dp"
            android:background="#9E9E9E"
            android:gravity="center_horizontal"
            android:text="="
            android:textSize="20sp" />
    </TableRow>
</TableLayout>