<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="156dp"
        android:text="Username"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_user"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:hint="Nhập User"
        app:layout_constraintTop_toBottomOf="@+id/tv_user"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@+id/ed_user"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ed_pass"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:hint="Nhập Pass"
        app:layout_constraintTop_toBottomOf="@+id/tv_pass"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ed_pass"
        android:text="Login"
        app:layout_constraintRight_toLeftOf="@+id/btn_register"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@+id/ed_pass"
        android:layout_marginLeft="30dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>