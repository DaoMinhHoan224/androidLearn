<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="64dp"
        android:text="Username"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_user"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:hint="Nhập User"
        app:layout_constraintTop_toBottomOf="@+id/tv_user"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@+id/ed_user"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ed_pass"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:hint="Nhập Pass"
        app:layout_constraintTop_toBottomOf="@+id/tv_pass"
        tools:layout_editor_absoluteX="16dp" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        app:layout_constraintTop_toBottomOf="@+id/ed_pass"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ed_name"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:hint="Nhập họ tên"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:layout_editor_absoluteX="16dp" />
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@+id/ed_name"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ed_email"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:hint="Nhập Email"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        tools:layout_editor_absoluteX="16dp" />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        app:layout_constraintTop_toBottomOf="@+id/ed_email"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:hint="Nhập Số điện thoại"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone"
        tools:layout_editor_absoluteX="16dp" />
    <TextView
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi chú"
        app:layout_constraintTop_toBottomOf="@+id/ed_phone"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/ed_note"
        android:layout_width="341dp"
        android:layout_height="46dp"
        android:hint="Ghi chú"
        app:layout_constraintTop_toBottomOf="@+id/tv_note"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_registerr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"
        android:text="Register"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_note" />

</androidx.constraintlayout.widget.ConstraintLayout>