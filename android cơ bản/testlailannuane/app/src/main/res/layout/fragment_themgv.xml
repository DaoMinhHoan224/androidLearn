<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fsaf"
    android:background="#71CC9C"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.themGVFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textViewthmesinhvien"
        android:layout_width="344dp"
        android:layout_height="75dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="176dp"
        android:background="#CB8DE6"
        android:gravity="center"
        android:padding="15dp"
        android:text=" Thêm giáo viên"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="408dp"
        android:layout_height="77dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="#ECD3B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewthmesinhvien">

        <TextView
            android:id="@+id/tvten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập tên"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="172dp" />

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/tvten"
            tools:layout_editor_absoluteX="100dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="405dp"
        android:layout_height="69dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#ECD3B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/tvngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập ngày"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="356dp" />

        <EditText
            android:id="@+id/ed_ngay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/tvngay"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="375dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="405dp"
        android:layout_height="82dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#ECD3B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <TextView
            android:id="@+id/tvchuyennganh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập chuyên ngành"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="429dp" />

        <EditText
            android:id="@+id/ed_chuyennganh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="299dp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Thêm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_huy"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_huy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="52dp"
        android:text="Hủy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>