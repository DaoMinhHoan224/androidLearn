<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitybai3">

    <EditText
        android:id="@+id/ed_chu"
        android:layout_width="343dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Nhập ký tự cần tìm"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_chuoi" />

    <Button
        android:id="@+id/btn_tim"
        android:layout_width="233dp"
        android:layout_height="0dp"
        android:layout_marginTop="84dp"
        android:text="tìm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_chu" />

    <EditText
        android:id="@+id/ed_chuoi"
        android:layout_width="337dp"
        android:layout_height="57dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Nhập chuỗi kí tự"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>