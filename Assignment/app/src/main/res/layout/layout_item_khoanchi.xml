<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_idKC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/id_nameKC"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/id_ngayKC"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/id_ngayKC"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/id_tienKC"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/id_tienKC"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/id_editpenKC"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/id_editpenKC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_pen" />

        <ImageView
            android:id="@+id/id_edittrashKC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_trash" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>